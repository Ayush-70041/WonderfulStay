<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Cart</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <style>
      /* General Styles */
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        color: #333;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }

      /* Navigation Bar Styles */
      .navbar {
        background-color: #000; /* Black background */
        padding: 0 15px;
      }

      .navbar-brand {
        color: #ffffff; /* White color */
        font-size: 2.5rem; /* Responsive font size */
      }

      .navbar-brand span {
        color: #14faeb; /* Aqua color */
      }

      .navbar-nav {
        margin-left: auto; /* Align nav items to the right */
      }

      .navbar-nav .nav-link {
        color: #fff; /* White color */
        font-size: 1rem; /* Responsive font size */
        transition: color 0.3s; /* Smooth color transition */
      }

      .navbar-nav .nav-link:hover {
        color: #ccc; /* Light grey on hover */
      }

      .navbar-toggler {
        border: none; /* Remove border */
      }

      .navbar-toggler-icon {
        background-color: transparent; /* Remove default background */
      }

      .navbar-toggler-icon::before {
        content: "\f0c9"; /* Unicode for hamburger icon */
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
        color: #fff;
        font-size: 1.5rem;
      }

      .navbar-collapse {
        justify-content: flex-end; /* Align menu items to the right */
        background-color: rgba(0, 0, 0, 0.9); /* Dark background for dropdown */
      }

      .navbar-collapse .navbar-nav {
        align-items: center; /* Align nav items to the right */
      }

      .navbar-collapse .dropdown-menu {
        background-color: #000; /* Black background for dropdown */
        border: none; /* Remove border */
      }

      .navbar-collapse .dropdown-item {
        color: #fff; /* White text color */
      }

      .navbar-collapse .dropdown-item:hover {
        background-color: #333; /* Darker grey on hover */
      }

      @media (max-width: 768px) {
        .navbar-brand {
          font-size: 2rem; /* Smaller font size on mobile */
        }

        .navbar-nav .nav-link {
          font-size: 0.9rem; /* Smaller font size on mobile */
        }
      }

      /* Footer Styles */
      footer {
        background-color: #000; /* Black background */
        color: #fff;
        text-align: center;
        padding: 10px 0;
        margin-top: auto;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      /* Bill Styles */
      .bill {
        width: 80%;
        max-width: 800px;
        margin: 30px auto;
        border: 1px solid #ccc;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .bill-header {
        width: 100%;
        text-align: center;
        margin-bottom: 20px;
      }

      .bill-header h1 {
        font-size: 32px;
        margin: 0;
      }

      .bill-header p {
        font-size: 18px;
        margin: 5px 0 0;
      }

      .cart-items {
        width: 100%;
      }

      .cart-item {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid #ccc;
        flex-direction: column;
        text-align: center;
      }

      .cart-item img {
        max-width: 100%;
        height: auto;
        max-height: 200px;
        object-fit: cover;
        margin-bottom: 10px;
        border-radius: 8px;
      }

      .cart-item-details {
        width: 100%;
        text-align: center;
      }

      .cart-item-details h2 {
        margin: 0;
        font-size: 24px;
        font-weight: bold;
      }

      .cart-item-details p {
        margin: 5px 0;
      }

      .date-inputs,
      .guests-inputs {
        margin: 10px 0;
      }

      .date-inputs label,
      .guests-inputs label {
        display: block;
        margin-bottom: 5px;
      }

      .date-inputs input,
      .guests-inputs input {
        margin-bottom: 10px;
        padding: 5px;
        font-size: 16px;
        width: 100%;
        max-width: 300px;
        display: block;
        margin-left: auto;
        margin-right: auto;
      }

      .remove-container {
        margin-top: 10px;
      }

      .remove-item {
        display: inline-block;
        text-decoration: none;
        color: #000;
        background-color: #ccc;
        padding: 6px 12px;
        border-radius: 3px;
        font-size: 14px;
        border: none;
      }

      .remove-item:hover {
        background-color: #999;
      }

      .subtotal {
        text-align: center;
        font-weight: bold;
        margin-top: 10px;
      }

      .total-price {
        text-align: center;
        margin-top: 20px;
        font-size: 20px;
      }

      .proceed-to-pay {
        text-align: center;
        margin-top: 20px;
      }

      .proceed-to-pay a {
        display: inline-block;
        text-decoration: none;
        color: #fff;
        background-color: #007bff;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 18px;
        transition: background-color 0.3s ease;
        cursor: pointer;
      }

      .proceed-to-pay a:hover {
        background-color: #0056b3;
      }

      /* Modal Styles */
      .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.7);
        align-items: center;
        justify-content: center;
      }

      .modal-content {
        background-color: #fff;
        margin: 15% auto;
        padding: 20px;
        border-radius: 8px;
        width: 80%;
        max-width: 600px;
      }

      .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
      }

      .close:hover,
      .close:focus {
        color: #000;
        text-decoration: none;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="#"> Wonderful<span>Stay</span> </a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a style="color:white;" class="nav-link" href="/profile">Home</a>
            </li>
            <li class="nav-item">
              <a style="color:white;" class="nav-link" href="/abouts">About</a>
            </li>
            <li class="nav-item">
              <a style="color:white;" class="nav-link" href="/contacts">Contact</a>
            </li>
            <li class="nav-item">
              <a style="color:white;" class="nav-link" href="/cartscreen">
                <i class="fas fa-bed"></i>
              </a>
            </li>
            <li class="nav-item">
              <a style="color:white;" class="nav-link" href="/logout">
                <i class="fas fa-sign-out-alt"></i> Logout
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content: Your Cart -->
    <div class="container">
      <div class="bill">
        <div class="bill-header">
          <h1>Your Booking</h1>
          <p>Date: <%= new Date().toLocaleDateString() %></p>
        </div>
        <div class="cart-items">
          <% let totalPrice = 0; %> <% user.posts.forEach(function(item) { %>
          <div class="cart-item">
            <img src="<%= item.image %>" alt="<%= item.name %>" />
            <div class="cart-item-details">
              <h2><%= item.name %></h2>
              <p>Price per Night: $<%= item.price %></p>
              <div class="date-inputs">
                <label for="checkIn_<%= item._id %>">Check-in Date:</label>
                <input
                  type="date"
                  id="checkIn_<%= item._id %>"
                  value="<%= item.checkIn %>"
                  onchange="calculateSubtotal('<%= item._id %>', <%= item.price %>, <%= item.quantity %>)"
                  
                />
                <label for="checkOut_<%= item._id %>">Check-out Date:</label>
                <input
                  type="date"
                  id="checkOut_<%= item._id %>"
                  value="<%= item.checkOut %>"
                  onchange="calculateSubtotal('<%= item._id %>', <%= item.price %>, <%= item.quantity %>)"
                  
                />
              </div>
              <div class="guests-inputs">
                <label for="guests_<%= item._id %>">Number of Guests:</label>
                <input
                  type="number"
                  id="guests_<%= item._id %>"
                  value="<%= item.guests || 1 %>"
                  onchange="calculateSubtotal('<%= item._id %>', <%= item.price %>, <%= item.quantity %>)"
                  
                />
              </div>
              <div class="subtotal" id="subtotal_<%= item._id %>">
                Subtotal: $<%= (item.price * item.quantity).toFixed(2) %>
              </div>
              <div class="remove-container">
                <form action="/removefromcart/<%= item._id %>" method="POST">
                  <button type="submit" class="remove-item">Remove</button>
                </form>
              </div>
            </div>
          </div>
          <% totalPrice += item.price * item.quantity; %> <% }); %>
        </div>
        <div class="total-price">
          Total Price: $<%= totalPrice.toFixed(2) %>
        </div>
        <div class="proceed-to-pay">
          <a href="#" id="proceedToPay">Proceed to Payment</a>
        </div>
      </div>
    </div>

    <!-- Payment Modal -->
    <div id="paymentModal" class="modal">
      <div class="modal-content">
        <span class="close" id="closeModal">&times;</span>
        <h2>Payment Details</h2>
        <!-- Include Stripe or other payment gateway form here -->
        <form id="paymentForm">
          <label for="card-element">Credit or Debit Card</label>
          <div id="card-element"></div>
          <div id="card-errors" role="alert"></div>
          <button type="submit">Pay</button>
        </form>
      </div>
    </div>

    <!-- Footer -->
    <footer>
      <div class="container">
        <p>&copy; 2024 Wonderful Stay. All rights reserved.</p>
      </div>
    </footer>

    <!-- JavaScript -->
    <script src="https://js.stripe.com/v3/"></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // Mobile Menu Toggle
        const hamburger = document.getElementById("hamburger");
        const navbarMenu = document.getElementById("navbarMenu");

        hamburger.addEventListener("click", () => {
          navbarMenu.classList.toggle("active");
        });

        // Payment Modal
        const modal = document.getElementById("paymentModal");
        const closeModal = document.getElementById("closeModal");
        const proceedToPay = document.getElementById("proceedToPay");
        const stripe = Stripe("YOUR_PUBLISHABLE_KEY"); // Replace with your Stripe publishable key
        const elements = stripe.elements();
        const cardElement = elements.create("card");
        cardElement.mount("#card-element");

        proceedToPay.addEventListener("click", async (e) => {
          e.preventDefault();
          modal.style.display = "flex";
        });

        closeModal.addEventListener("click", () => {
          modal.style.display = "none";
        });

        window.addEventListener("click", (e) => {
          if (e.target === modal) {
            modal.style.display = "none";
          }
        });

        const paymentForm = document.getElementById("paymentForm");
        paymentForm.addEventListener("submit", async (e) => {
          e.preventDefault();
          const { token, error } = await stripe.createToken(cardElement);

          if (error) {
            document.getElementById("card-errors").textContent = error.message;
          } else {
            fetch("/charge", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ token: token.id }),
            }).then((response) => {
              if (response.ok) {
                window.location.href = "/thank-you";
              } else {
                document.getElementById("card-errors").textContent =
                  "Payment failed.";
              }
            });
          }
        });
      });

      function calculateSubtotal(itemId, pricePerNight, quantity) {
        const checkInDate = new Date(
          document.getElementById(`checkIn_${itemId}`).value
        );
        const checkOutDate = new Date(
          document.getElementById(`checkOut_${itemId}`).value
        );

        if (checkInDate && checkOutDate && checkInDate < checkOutDate) {
          const timeDiff = checkOutDate - checkInDate;
          const daysDiff = Math.ceil(timeDiff / (1000 * 60 * 60 * 24));

          // Calculate subtotal
          const subtotal = daysDiff * pricePerNight * quantity;

          // Update subtotal element
          document.getElementById(
            `subtotal_${itemId}`
          ).innerHTML = `Subtotal: $${subtotal.toFixed(2)}`;

          // Update total price
          updateTotalPrice();
        } else {
          document.getElementById(
            `subtotal_${itemId}`
          ).innerHTML = `Subtotal: $0.00`;
        }
      }

      function updateTotalPrice() {
        let total = 0;
        document.querySelectorAll(".subtotal").forEach((subtotalElement) => {
          const subtotal = parseFloat(
            subtotalElement.textContent.replace("Subtotal: $", "")
          );
          total += subtotal;
        });

        document.querySelector(
          ".total-price"
        ).innerHTML = `Total Price: $${total.toFixed(2)}`;
      }
    </script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
